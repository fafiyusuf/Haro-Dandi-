# Backend environment variables for Haro Dandi API
# Copy this file to `.env` and adjust values as needed.

# App
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# MongoDB
# Local MongoDB (Docker or native):
MONGODB_URI=mongodb://localhost:27017/haro-dandi
# Or MongoDB Atlas (example):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/haro-dandi?retryWrites=true&w=majority

# JWT
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# SMTP (optional, only needed for email features)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Admin
ADMIN_EMAIL=admin@harodandi.com
